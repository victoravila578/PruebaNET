@model WebPruebaNet.Models.Sucursal

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Sucursal</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="iSucursalId" class="col-md-2 control-label">Codigo sucursal</label>
            <div class="col-md-10">
                <input asp-for="iSucursalId" class="form-control" readonly />
                <span asp-validation-for="iSucursalId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="vNombre" class="col-md-2 control-label">Nombre de Sucursal</label>
            <div class="col-md-10">
                <input asp-for="vNombre" class="form-control" />
                <span asp-validation-for="vNombre" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="vDireccion" class="col-md-2 control-label">Direccion</label>
            <div class="col-md-10">
                <input asp-for="vDireccion" class="form-control" />
                <span asp-validation-for="vDireccion" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Actualizar" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>    
    @Html.ActionLink("Listar Sucursales", "Index", new { id = ViewBag.iBanco })
</div>

